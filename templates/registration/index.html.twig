{% extends 'base.html.twig' %}

{% block title %}Inscription!{% endblock %}

{% block body %}
<div class="container">
    <div class="login-box">
        <div class="row">
            <div class="col-md-6 mx-auto pt-5">
                <div class="top-heading mb-3">
                    <h3 class="header-title ">Inscription</h3>
                    <small class=""><em>Visualisez votre croissance !</em></small>
                </div>

                <!--div class="google-sign mb-4">
                    <button class="google-btn"><img src="/build/images/icons/google.png" class="google-btn-img" alt="logo_google" /> Inscrivez-vous avec Google</button>
                    <div class="d-flex mt-4">
                    <hr class="my-auto flex-grow-1">
                    <div class="px-4 mute-text">Ou Inscrivez-vous avec un e-mail</div>
                    <hr class="my-auto flex-grow-1">
                    </div>
                </div-->

                <div class="login-form">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{form_widget(form.fullname)}}
                        <span class="error" id="fullname_err"> {{form_errors(form.fullname)}}</span>
                    </div>
                    <div class="form-group">
                        {{form_widget(form.email)}}
                        <span class="error" id="email_err"> {{form_errors(form.email)}}</span>
                    </div>

                    <div class="form-group">
                        <div class="form-group-append form-control">
                            {{form_widget(form.password)}}
                            <span class="form-group-text" onclick="password_show_hide();">
                                <i class="fas fa-eye" id="show_eye"></i>
                                <i class="fas fa-eye-slash d-none" id="hide_eye"></i>
                            </span>
                        </div>
                        <span class="error" id="password_err"> {{form_errors(form.password)}}</span>
                    </div>

                    <div class="form-group">
                        <div class="form-group-append form-control">
                            {{form_widget(form.passwordConfirm)}}
                        </div>
                        <span class="error" id="passwordConfirm_err"> {{form_errors(form.passwordConfirm)}}</span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" class="btn btn-primary text-white login-btn w-50">
                    </div>
                    <hr>
                    <div class="form-group">
                        <div class="py-3 font-size">Déjà inscrit? <a href="{{ path('app_login') }}">Connexion</a></div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('build/scripts/registration.js') }}"></script>
<script>
    function password_show_hide() {
    var x = document.getElementById("registration_password");
    var show_eye = document.getElementById("show_eye");
    var hide_eye = document.getElementById("hide_eye");
    hide_eye.classList.remove("d-none");
    if (x.type === "password") {
        x.type = "text";
        show_eye.style.display = "none";
        hide_eye.style.display = "block";
    } else {
        x.type = "password";
        show_eye.style.display = "block";
        hide_eye.style.display = "none";
    }
    }
</script>
{% endblock %}
