{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Error page 403{% endblock %}

{% block body %}
    <main class="bg-secondary">
        <div class="container">
            <div class="text-center py-5">
                <img class="mb-5 img-error" height="250" width="250" src="/build/images/error-403-Forbidden-bro.svg" />
                <div class="alert alert-danger">
                    <p class="fs-4 lead my-2">Vous n'avez pas le droit d'accéder à cette ressource !</p>
                </div>
                <a class="btn btn-lg btn-primary text-white" href="{{ path('app_main') }}">
                    <i class="fas fa-arrow-left me-1"></i>
                    Retour à l'accueil
                </a>
            </div>
        </div>
    </main>
{% endblock %}